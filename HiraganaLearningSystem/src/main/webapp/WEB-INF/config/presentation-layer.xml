<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<context:component-scan base-package="com.kaeru.view"></context:component-scan>
	
	<mvc:annotation-driven></mvc:annotation-driven>
	
	<!-- css, js, images 리소스 경로 지정 -->
	<mvc:resources location="/WEB-INF/resources/css/" mapping="/css/**/"/>
	<mvc:resources location="/WEB-INF/resources/images/" mapping="/images/**/"/>
	<mvc:resources location="/WEB-INF/resources/js/" mapping="/js/**/"/>
	<mvc:resources location="/WEB-INF/resources/sounds/" mapping="/sounds/**/"></mvc:resources>
	
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/"/>
		<property name="suffix" value=".jsp"/>
		<property name="contentType" value="test/html;charset=UFT-8"/>
	</bean>
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="5000000"/>
	</bean>
</beans>
